<p id="notice"><%= notice %></p>

<h1><%= t '.title' %></h1>

<table>
  <thead>
  <tr>
    <th><%= User.human_attribute_name(:name) %></th>
    <th><%= User.human_attribute_name(:self_introduction) %></th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.self_introduction %></td>
      <td><%= link_to t('views.common.show') ,user %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>
<%= paginate @users %>
<%= link_to t('views.common.back'), :back %>
